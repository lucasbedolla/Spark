<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/white_space"
    android:clickable="true"
    android:background="@color/white_luscent"
    tools:context="cool.lucasbedolla.swish.fragments.SettingsFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="40dp"
        android:layout_height="match_parent"
        android:clickable="true"
        android:elevation="12dp"
        android:background="@drawable/settings_bgn">
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/waves"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="56dp"
            android:text="Spark Settings"
            android:textColor="@color/white"
            android:textSize="60sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="22dp"
            android:background="@color/white"
            android:id="@+id/separator"
            android:layout_below="@+id/waves" />


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/separator"
            android:orientation="vertical"
            tools:context="cool.lucasbedolla.swish.activities.settings.SettingsActivity">

            <RadioGroup
                android:id="@+id/radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </RadioGroup>

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/dual_mode"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:text="dual mode" />
        </LinearLayout>

        <TextView
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="80dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="logout"
            android:textAlignment="center" />

    </RelativeLayout>

</RelativeLayout>
