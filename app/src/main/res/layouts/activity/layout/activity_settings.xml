<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cool.lucasbedolla.swish.activities.settings.SettingsActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="cool.lucasbedolla.swish.activities.settings.SettingsActivity">

    <RadioGroup
        android:id="@+id/radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/classic"
            style="@android:style/Widget.CompoundButton.CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:onClick="onRadioButtonClicked"
            android:text="classic" />

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/minimalist"
            style="@android:style/Widget.CompoundButton.CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:onClick="onRadioButtonClicked"
            android:text="more" />

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/extreme_minimalist"
            style="@android:style/Widget.CompoundButton.CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:onClick="onRadioButtonClicked"
            android:text="EXTREME MINIMALIST" />

    </RadioGroup>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/dual_mode"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="dual mode" />
    </LinearLayout>

    <TextView
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp"
        android:gravity="center"
        android:text="logout"
        android:textAlignment="center" />

</RelativeLayout>
