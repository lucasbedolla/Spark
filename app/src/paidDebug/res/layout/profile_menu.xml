<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="100dp">

    <ImageView android:id="@+id/row_pic" android:layout_width="50dp" android:layout_height="50dp"
        android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" android:padding="10dp" />

    <TextView android:id="@+id/row_text" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/row_pic" android:layout_toRightOf="@+id/row_pic"
        android:paddingLeft="20dp" android:paddingStart="20dp" android:text="New Text"
        android:textColor="@color/white" android:textSize="26dp" />
</RelativeLayout>